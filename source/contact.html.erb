<form id="ajax-contact" method="post" action="https://static-files.canaryprint.ca/caufieldsmemorials.com/mailer.php" class="canarystrap-form">

<div class="main-content">
  <section class="sub-template-content">
    <div class="container">
      <div class="product-container contact-form">
        <div class="other">
          <label for="name">Name</label>
          <input name="name" type="text" name="name" />
        </div>
        <div class="other">
          <label for="email">Email</label>
          <input name="email" type="email" name="email" required />
        </div>
        <div class="other">
          <label for="message">Your Message</label>
          <textarea name="message" rows="8" required ></textarea>
        </div>
        <button type="submit" class="btn-primary">Send in for Message</button>
      </div>
    </div>  
  </section>
</div>

</form>
<div id="form-messages"></div>

 <script>
$(function() {
  // Get the form.
  var form = $('#ajax-contact');
  // Get the messages div.
  var formMessages = $('#form-messages');
  // Set up an event listener for the contact form.
  $(form).submit(function(e) {
    // Stop the browser from submitting the form.
    e.preventDefault();
    // Serialize the form data.
    var formData = $(form).serialize();
    // Submit the form using AJAX.
    $.ajax({
      type: 'POST',
      url: $(form).attr('action'),
      data: formData
    })
    .done(function(response) {
      // Make sure that the formMessages div has the 'success' class.
      $(formMessages).removeClass('error');
      $(formMessages).addClass('success');
      // Set the message text.
      $(formMessages).text(response);
      // Clear the form.
      $('#name, #email, #message').val('');
    })
    .fail(function(data) {
      // Make sure that the formMessages div has the 'error' class.
      $(formMessages).removeClass('success');
      $(formMessages).addClass('error');
      // Set the message text.
      if (data.responseText !== '') {
        $(formMessages).text(data.responseText);
      } else {
        $(formMessages).text('Oops! An error occured and your message could not be sent.');
      }
    });
  });
});
</script>
